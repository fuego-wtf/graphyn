{
	"compilerOptions": {
		"baseUrl": "..",
		"paths": {
			"@/*": ["../*"]
		},
		"target": "es2017",
		"lib": ["esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true
	},
	"include": [
		"**/*.ts"
	],
	"exclude": ["node_modules"]
}